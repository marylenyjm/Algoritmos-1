#include "stdafx.h"
#include <conio.h>
#include <iostream>
#include "stdlib.h"
using namespace std;


int sumaNimpares (){
int n,s,i;
cout<<"Ingrese n: ";
cin>>n;
s=0;
for(i=1;i<=n;i++)
if(i%2!=0)
s=s+i;
cout<<"La suma es: "<<s;
getch();
return 0;
}

int sumaNPimpares (){
int n,s,a,b;
a = 1;
s = 0;
b = 0;
cout<<"Ingrese n; ";
cin>>n;
while(b < n){
if(a%2!=0){
s = s+a;
a=a+2;
}
b++;
}
cout<<"La suma es: "<<s;
getch();
return 0;
}

int sumaHastaNegativo(){
int n,s;
s=0;
cout<<"Digite un numero: ";
cin>>n;
while(n>0){
s=s+n;
cout<<endl<<"La suma es: "<<s;
cout<<endl<<endl<<"ingrese un numero: ";
cin>>n;
}
cout<<endl<<"La suma es: "<<s;
getch();
return 0;
}

int main(){
int opcion;
cout<<endl<<" M E N U ";
cout<<endl<<endl<<"1.-SUMA DE N IMPARES";
cout<<endl<<"2.-Realizar la suma de los N primeros numeros impares";
cout<<endl<<"3.-Realizar la suma usando while mientras no se digite un numero negativo";
cout<<endl<<"0.-Salir";
cout<<endl<<endl<<"Elija su opcion.";
do{
cin>>opcion;
switch(opcion){
    case 1:sumaNimpares ();
        break;
    case 2:sumaHastaNegativo();
        break;
    case 3: sumaHastaNegativo();
        break;
}
}while(opcion != 0);
getch();
return(0);
}
