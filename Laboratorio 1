#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;
int main ()
{
	int n,s,i;
	cout<<"Ingrese N: " ;
	cin>>n;
	s=0;
	for (i=1;i<=n;i++)
		if(i%2!=0)
			s=s+i;
	cout<< "La suma es:"<<s;
	getch();
	return 0;
}

// realizar la suma de los N primeros numeros impares

int main ()
{
	int n,s,a,b;
	a=1;
	s=0;
	b=0;
	cout<<"Ingrese N: ";
	cin>>n;
	while (b<n){
		if(a%2!=0){
			s=s+a;
			a=a+2;
	}
	b++;
	}
	cout<<"La suma es: "<<s;
	getch();
	return 0;
}

//Realizar la suma usando while mientras no se digiten numeros negativos

int main ()
{
	int s,n;
	s=0;
	cout<<"Ingrese un numero: ";
	cin>>n;
	while (n>0){
	s=n+s;
	cout<<endl<<"La suma es: "<<s;
	cout<<endl<<"Ingrese un numero ";
	cin>>n;}
	cout<<endl<<"La suma es: "<<s;
	getch();
	return 0;

}
